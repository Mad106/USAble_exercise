@page
@model USAble_proj.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Orders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Orders.ID" />
            <div class="form-group">
                <label asp-for="Orders.Discount" class="control-label"></label>
                <input asp-for="Orders.Discount" class="form-control" />
                <span asp-validation-for="Orders.Discount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Orders.Closed" /> @Html.DisplayNameFor(model => model.Orders.Closed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Orders.ItemCost" class="control-label"></label>
                <input asp-for="Orders.ItemCost" class="form-control" />
                <span asp-validation-for="Orders.ItemCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
