@page
@model USAble_proj1.Pages.Orders.All_OrdersModel
@{
    ViewData["Title"] = "All_Orders";
}

@* This page is very similar to Index.cshtml but provides server name and date/time and doesn't provide ordered items *@
@* This page includes orders that have been closed and orders here cannot be edited, but the user can see details and delete order *@
<h1>All Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Server Name
            </th>
            <th>
                Date/Time
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Subtotal)
            </th>
            <th>
                Discount
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].PreTax)
            </th>
            <th>
                Tax Amount
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Closed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreTax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Closed)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    
}
    </tbody>
</table>